@model GetDetailAppUserVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="col-md-3">

    <!-- Profile Image -->
    <div class="box box-primary">
        <div class="box-body box-profile">
            <img class="profile-user-img img-responsive img-circle" src="@Model.Image" alt="User profile picture">

            <h3 class="profile-username text-center">@Model.FirstName @Model.LastName</h3>

            <p class="text-muted text-center">@Model.Role</p>
        </div>
    </div>

</div>